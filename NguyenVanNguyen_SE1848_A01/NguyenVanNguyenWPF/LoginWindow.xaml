<Window x:Class="NguyenVanNguyenWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NguyenVanNguyenWPF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Center" Margin="0,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="430" FontSize="22"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Center" Margin="0,262,0,0" VerticalAlignment="Top" FontSize="22" Width="151" Click="btnLogin_Click" Background="#FF95DF80" FontWeight="Bold"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Center" Margin="0,344,0,0" VerticalAlignment="Top" FontSize="22" Width="151" Click="btnCancel_Click" Background="#FFF16060" FontWeight="Bold"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Center" Margin="0,175,0,0" VerticalAlignment="Top" Width="430" FontSize="22"/>
        <Label Content="Tên đăng nhập " HorizontalAlignment="Left" Margin="46,95,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
        <Label Content="Mật khẩu" HorizontalAlignment="Left" Margin="46,175,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
    </Grid>
</Window>
