<Window x:Class="NguyenVanNguyenWPF.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NguyenVanNguyenWPF"
        mc:Ignorable="d"
        Title="CustomerWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="btnHistory" Content="View order history" HorizontalAlignment="Center" Margin="0,74,0,0" VerticalAlignment="Top" FontSize="20" Click="btnHistory_Click" Width="214" Height="33" Background="#FFA0F491"/>
        <Button x:Name="btnEdit" Content="Edit profile" HorizontalAlignment="Center" Margin="0,156,0,0" VerticalAlignment="Top" FontSize="20" Click="btnEdit_Click" Width="214" Background="#FF78FAFF"/>
        <Button x:Name="btnClose" Content="Close" HorizontalAlignment="Center" Margin="0,232,0,0" VerticalAlignment="Top" FontSize="22" Width="214" Click="btnClose_Click" Background="#FFF95A5A"/>

    </Grid>
</Window>
