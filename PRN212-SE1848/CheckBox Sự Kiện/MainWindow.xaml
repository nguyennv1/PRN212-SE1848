<Window x:Class="CheckBox_Sự_Kiện.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckBox_Sự_Kiện"
        mc:Ignorable="d"
        Title="(SE180746-Nguyễn Văn Nguyên) ChecBox-Sự Kiện" Height="450" Width="800">
    <Grid>
        <Label Content="Bạn thích những gì?" HorizontalAlignment="Left" Margin="96,23,0,0" VerticalAlignment="Top" Width="184"/>
        <CheckBox Name ="chkToanBo" Content="Thích toàn bộ hoạt động" HorizontalAlignment="Left" Margin="125,54,0,0" VerticalAlignment="Top" Height="34" Width="240" 
                  Checked="chkToanBo_Checked"
                  Unchecked="chkToanBo_Unchecked">
        </CheckBox>
        <CheckBox Name ="chkCongNghe" Content="Thích nghiên cứu công nghệ" HorizontalAlignment="Left" Margin="160,88,0,0" VerticalAlignment="Top"
                   Checked="chkSub_CheckedChanged"
                   Unchecked="chkSub_CheckedChanged">
        </CheckBox>
        <CheckBox Name ="chkDuLich" Content="Thích đi du lịch" HorizontalAlignment="Left" Margin="160,123,0,0" VerticalAlignment="Top"
                    Checked="chkSub_CheckedChanged"
                    Unchecked="chkSub_CheckedChanged">
        </CheckBox>
        <CheckBox Name ="chkBongDa" Content="Thích đá bóng" HorizontalAlignment="Left" Margin="160,161,0,0" VerticalAlignment="Top"
                    Checked="chkSub_CheckedChanged"
                    Unchecked="chkSub_CheckedChanged">
        </CheckBox>
        <CheckBox Name ="chkXemPhim" Content="Thích xem phim" HorizontalAlignment="Left" Margin="160,197,0,0" VerticalAlignment="Top"
                    Checked="chkSub_CheckedChanged"
                    Unchecked="chkSub_CheckedChanged">
        </CheckBox>

    </Grid>
</Window>
