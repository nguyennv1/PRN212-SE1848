<Window x:Class="RadioButtonControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="(SE180746-Nguyễn Văn Nguyên)RadioButton Control" Height="252" Width="350">
    <StackPanel Margin="10">
        <GroupBox Header="Bạn thấy hệ thống này thế nào?" Margin="0,0,0,10">
            <StackPanel Margin="10,0,0,0">
                <RadioButton GroupName="hethong" Name="radRatTot">Rất tốt</RadioButton>
                <RadioButton GroupName="hethong" Name="radTot" IsChecked="True">Tốt</RadioButton>
                <RadioButton GroupName="hethong" Name="radTamDuoc">Tạm Được</RadioButton>
                <RadioButton GroupName="hethong" Name="radKhongTot">Không Tốt</RadioButton>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Giới tính của bạn là gì?" Margin="0,0,0,10">
            <StackPanel Margin="10,0,0,0">
                <RadioButton GroupName="gioitinh" Name="radNam" IsChecked="True">Nam</RadioButton>
                <RadioButton GroupName="gioitinh" Name="radNu">Nữ</RadioButton>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Chọn tác vụ:">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                <Button Content="Gửi phản hồi" Name="btnGui" Width="100" Margin="5,0" Click="BtnGui_Click"/>
                <Button Content="Hủy" Name="btnHuy" Width="100" Click="BtnHuy_Click"/>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</Window>
