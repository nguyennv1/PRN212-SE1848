<Window x:Class="ButtonControl_TongHop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ButtonControl_TongHop"
        mc:Ignorable="d"
        Title="SE180746_Nguyễn Văn Nguyên" Height="450" Width="800">
    <Grid Margin="20">
        <Label Content="Tổng 2 số" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"/>

        <Label Content="Hệ Số a:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,60,0,0"/>
        <TextBox x:Name="txtA" Width="200" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,60,0,0"/>

        <Label Content="Hệ Số b:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,100,0,0"/>
        <TextBox x:Name="txtB" Width="200" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,100,0,0"/>

        <Label Content="Kết quả:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,140,0,0"/>
        <TextBlock x:Name="tbKetQua" Width="200" Height="25" Background="Yellow" FontSize="14" Padding="5"
                   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,140,0,0"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
            <Button Content="Tổng" Width="80" Margin="10" Click="BtnTong_Click"/>
            <Button Content="Thoát" Width="80" Margin="10" Click="BtnThoat_Click"/>
        </StackPanel>
    </Grid>
</Window>
